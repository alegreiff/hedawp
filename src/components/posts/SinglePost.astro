---
import type { Post } from '@/interfaces.posts'
import { Image } from 'astro:assets'

interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="lg:w-1/3 px-2.5 mb-5">
  <a class="rounded-lg bg-white shadow-lg p-5 h-full flex flex-col items-start justify-between group hover:bg-slate-100" href={`/${post.slug}`}>
    <div>
      { post.featuredImage && <figure class="overflow-hidden"><Image src={post.featuredImage.node.sourceUrl} class="transition duration-200 group-hover:scale-110 " width={600} height={400} alt={post.title} transition:name={`${post.slug}-image`} /></figure> 
    
    }

      <h2 class="text-xl mb-5 font-titulos font-normal text-slate-800" transition:name={`${post.slug}-title`}>{post.title}</h2>
      <p class=" mb-6">{post.excerpt.replace(/<(.|\n)*?>/g, '')}</p>
      
    </div>
    <!-- <a class="btn btn-xs" href={`/${post.slug}`}>Ver entrada</a> -->
  </a>
</div>