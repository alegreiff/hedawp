---
import { API_BASE_URL, maxPosts } from "@/lib/constants";
import type { Post } from "@/interfaces.posts";
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
const response = await fetch(API_BASE_URL,
  {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({
      query: `
				query IndexPage {
					posts(where: {orderby: {field: DATE, order: DESC}}, first: ${maxPosts}) {
						nodes {
							slug
							date
							title
							excerpt
							featuredImage {
								node {
									sourceUrl(size: MASTERIMAGE)
								}
							}
						}
					}
				}
      `
    }),
  });

// destructure data from our JSON
const { data } = await response.json();
//console.log( data )

//  assign the array of nodes to "posts" variable for usability
const posts: Post[] = data.posts.nodes




---
<MainLayout>

	<div class="bg-slate-200 rounded-lg py-12">
					<h1 class="text-center text-3xl">Contenido ADS</h1>
	</div>
				
	<div class="flex flex-wrap pt-5 -mx-2.5">
		{posts.map((post, i) => (
			<div class="lg:w-1/3 px-2.5 mb-5">
				<article class="rounded-lg bg-white shadow-lg p-5 h-full flex flex-col items-start justify-between">
					<div>
						{ post.featuredImage && <Image src={post.featuredImage.node.sourceUrl} class="" width={600} height={400} alt={post.title} /> }

						<h2 class="text-xl font-bold mb-5">{post.title}</h2>
						<p class=" mb-6">{post.excerpt.replace(/<(.|\n)*?>/g, '')}</p>
						<span>{i}</span>
					</div>
					<a class="inline-block bg-slate-600 text-white rounded-md px-6 py-3 hover:bg-slate-500" href={`/${post.slug}`}>Read More</a>
				</article>
			</div>
		))}
	</div>

</MainLayout>				